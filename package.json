{
  "name": "protocol-system-test-harness-e2e",
  "private": true,
  "version": "0.1.0",
  "description": "Playwright UI/E2E tests for protocol-system-test-harness",
  "type": "module",
  "scripts": {
    "pw:install": "playwright install --with-deps",
    "pw:test": "playwright test",
    "pw:test:ui": "playwright test --ui",
    "pw:report": "playwright show-report",
    "pw:codegen": "playwright codegen http://127.0.0.1:8000/ui",

    "sim:serve": "uvicorn services.device_sim.app.main:app --host 127.0.0.1 --port 8000",
    "sim:serve:reload": "uvicorn services.device_sim.app.main:app --host 127.0.0.1 --port 8000 --reload",

    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "PWDEBUG=1 playwright test",

    "ci:e2e": "playwright test --reporter=line"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0"
  }
}

